import random
count_try=0
max=3
question_1="Что может быть за дверью?"
answer_and_score={"комната" : "5 баллов",
                    "гость" : "10 баллов",
                    "улица" : "15 баллов",
                    "муж" : "20 баллов",
                    "темнота" : "25 баллов",
                    "лестница" : "30 баллов"}
question_2="Какие блюда итальянской кухни Вы знаете?"
answer_and_score_2={"пицца" : "5 баллов",
                    "спагетти" : "10 баллов",
                    "лазанья" : "15 баллов",
                    "ризотто" : "20 баллов",
                    "равиоли" : "25 баллов",
                    "паста" : "30 баллов"}
list=[question_1, question_2]
print("Хотите сыграть в игру 'Сто к одному'?")
answer=input()
if answer == "нет":
    print("Сыграем в другой раз")
elif answer == "да":
    print("Отлично!")
    question=random.choice(list)
    print("Я выбрал следующий вопрос:", question)
    print("У Вас есть три попытки, чтобы угадать популярный ответ.")
    user_word=input("Введите ответ на вопрос: ")
    if question == question_1:
        while count_try<3:
            if user_word not in answer_and_score:
                print("Неверно!")
                count_try += 1
                if count_try<3:
                    user_word = input("Введите другое слово: ")
                elif count_try>3:
                    print("Количество попыток закончилось.")
            elif user_word in answer_and_score:
                print(f"Поздравляю! За угаданное слово Вы получаете {answer_and_score[user_word]}.")
                break
    if question == question_2:
        while count_try < 3:
            if user_word not in answer_and_score_2:
                print("Неверно!")
                count_try += 1
                if count_try < 3:
                    user_word = input("Введите другое слово: ")
                elif count_try>3:
                    print("Количество попыток закончилось.")
            elif user_word in answer_and_score_2:
                print(f"Поздравляю! За угаданное слово Вы получаете {answer_and_score_2[user_word]}.")
                break
